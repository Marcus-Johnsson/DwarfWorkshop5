<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DwarfWorkshop5.MainPage">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center" 
                HorizontalOptions="Center"
                Padding="50"
                BackgroundColor="Transparent"
                Spacing="20"  
                Margin="0, 300, 0, 0"
                >

            <Button 
                Text="Log In"
                Clicked="OnLoginClicked"
                BackgroundColor="Transparent"
                TextColor="Gold"
                BorderColor="Gold"
                BorderWidth="1">

            </Button>

            <Button
                        Text="Create Account"
                        Clicked="OnRegisterButtonClicked"
                        BackgroundColor="Transparent"
                        TextColor="Gold"
                        BorderColor="Gold"
                        BorderWidth="1">
            </Button>


            <Button
                    Text="Quit"
                    Clicked="OnQuitButtonClicked"
                    BackgroundColor="Transparent"
                    TextColor="Gold"
                    BorderColor="Gold"
                    BorderWidth="1">

            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
